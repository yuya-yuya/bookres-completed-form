<% if @new_book.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <%= @new_book.errors.count %>errors prohibited this obj from being saved:<br>
    </div>
    <div class="panel-body">
      <ul>
        <% @new_book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-3">
    <%= render 'layouts/user_info', user: @user %>
    <%= render 'layouts/new_book', book: @new_book %>
  </div>

  <div class="col-xs-9">
    <h1>
      Books
    </h1>

    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>
            Title
          </th>
          <th>
            Opinion
          </th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: '40x40', class: "pull-left profile-thumb" %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, books_path(book.id) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
