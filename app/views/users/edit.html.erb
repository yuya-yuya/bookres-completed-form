<% if @user.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      <%= @user.errors.count %>errors prohibited this obj from being saved:<br>
    </div>
    <div class="panel-body">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<h1>User info</h1>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :profile_image , "Image" %>
    <%= f.attachment_field :profile_image %>
  </div>


  <div>
    <%= f.label :introduction, "Introduction" %>
    <%= f.text_area :introduction %>
  </div>


  <%= f.submit "Update User" %>
<% end %>

